<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/woodtexture"
    tools:context=".meat.EditMeatActivity">

    <EditText
        android:id="@+id/etEditSousName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:alpha="0.6"
        android:background="@android:drawable/editbox_background"
        android:backgroundTint="#573606"
        android:ems="10"
        android:gravity="start"
        android:hint="@string/hintName"
        android:inputType="textMultiLine|textPersonName"
        android:padding="8dp"
        android:shadowColor="#040303"
        android:textColor="@color/white"
        android:textColorHint="@color/ic_launcher_background"
        android:textColorLink="@color/purple_500"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/etEditSousContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.6"
        android:background="@android:drawable/editbox_background"
        android:backgroundTint="#573606"
        android:ems="10"
        android:gravity="start"
        android:hint="@string/hintContent"
        android:inputType="textMultiLine|textPersonName"
        android:padding="8dp"
        android:shadowColor="#040303"
        android:textColor="@color/white"
        android:textColorHint="@color/ic_launcher_background"
        android:textColorLink="@color/purple_500"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etEditSousName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etEditSousName"
        app:layout_constraintTop_toBottomOf="@+id/etEditSousName"
        app:layout_constraintVertical_bias="0.419" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingSousSaved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:alpha="0.8"
        android:clickable="true"
        app:backgroundTint="#654009"
        app:layout_constraintBottom_toBottomOf="@+id/etEditSousContent"
        app:layout_constraintEnd_toEndOf="@+id/etEditSousContent"
        app:srcCompat="@android:drawable/ic_menu_save"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>